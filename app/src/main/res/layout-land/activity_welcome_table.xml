<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".WelcomeActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:stretchColumns="*"
    android:background="@color/game_background_desert">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/textView"
            android:textSize="40sp" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">
        <Button
            style="@style/gameBtn"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="@string/welcome_continue"
            android:id="@+id/btnContinue"
            android:onClick="actionContinue"
            android:layout_marginRight="10dp"
            />
        <Button
            style="@style/gameBtn"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="@string/welcome_newgame"
            android:id="@+id/btnNewGame"
            android:nestedScrollingEnabled="false"
            android:onClick="actionNewGame" />
    </TableRow>

<TableRow
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">
    <Button
        style="@style/gameBtn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/welcome_about"
        android:id="@+id/btnAbout"
        android:onClick="actionAbout"
        android:layout_marginRight="10dp"/>
    <Button
        style="@style/gameBtn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/welcome_exit"
        android:id="@+id/btnExit"
        android:onClick="actionExit" /></TableRow>

</TableLayout>
